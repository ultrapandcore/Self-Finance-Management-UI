@page "/"
@namespace SelfFinanceManagerUI.Pages
@using Microsoft.AspNetCore.Components.Web;
@using Microsoft.Extensions.Localization;
@using Microsoft.AspNetCore.Authentication
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject IStringLocalizer<App> Localizer

@{

    var accessToken = await HttpContext.GetTokenAsync("access_token");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="css/site.css" rel="stylesheet" />
    <link href="SelfFinanceManagerUI.styles.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="icon" type="image/png" href="favicon.png"/>
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" param-AccessToken="accessToken" render-mode="ServerPrerendered" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            @Localizer["An error has occurred. This application may no longer respond until reloaded."]
        </environment>
        <environment include="Development">
            @Localizer["An unhandled exception has occurred. See browser dev tools for details."]
        </environment>
        <a href="" class="reload">@Localizer["Reload"]</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>